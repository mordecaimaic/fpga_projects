module seg_decoder16 (
    input [3:0] bin_data,    // 4 位的二进制输入，表示十进制数值
    output [6:0] seg_data    // 7 段数码管输出
);

// 定义 7 段数码管编码
parameter [6:0] seg_hex [0:15] = {
    7'b0000001,  // 0
    7'b1001111,  // 1
    7'b0010010,  // 2
    7'b0000110,  // 3
    7'b1001100,  // 4
    7'b0100100,  // 5
    7'b0100000,  // 6
    7'b0001111,  // 7
    7'b0000000,  // 8
    7'b0000100,  // 9
    7'b0001000,  // A
    7'b1100000,  // B
    7'b0110001,  // C
    7'b1000010,  // D
    7'b0110000,  // E
    7'b0111000   // F
};

always @* begin
    seg_data = seg_hex[bin_data]; // 使用输入值查找对应的数码管编码
end

endmodule
